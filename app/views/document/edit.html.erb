<div class="container">
  <h1>ドキュメントの編集</h1>
  <hr>
  <%= form_for @document, :url => document_path(@document) do |f| %>
    <div class="form-group">
      <%= f.label :title, 'タイトル', :class => 'control-label' %>
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :content, '本文', :class => 'control-label' %>
      <%= f.text_area  :content, :class => 'form-control', :rows => 10 %>
    </div>
    <div class="form-group">
      <%= f.submit '更新', :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
