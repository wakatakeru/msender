<div class="container">
  <div class="row">
    <h1>ユーザ一覧</h1>
  </row>
  <hr>
  <div class="form-group">
    <form action="/user" method="get" class="form-inline">
      <input type="text" name="q" placeholder="ユーザ検索" class="form-control">
          <input type="submit" value="検索" class="form-control">
    </form>
  </div>
  <table class="table table-hover">
    <tr>
      <th>ID</th>
      <th>ユーザ名</th>
      <th>ロール</th>
      <th>操作</th>
    </tr>
    <% @users.each do |i| %>
      <tr>
        <td><%= link_to i.login_id, user_path(i.id) %></td>
        <td><%= i.screen_name %></td>
        <% if i.is_admin %>
          <td>管理者</td>
        <% else %>
          <td>一般ユーザ</td>
        <% end %>
        <td>
          <%= link_to '編集', edit_user_path(i.id), :class => 'btn btn-success btn-xs'%>
          <%= link_to '削除', user_path(i.id), :method => 'delete', :class => 'btn btn-danger btn-xs', data: {confirm: "ユーザ#{i.login_id}を削除します。よろしいですか？"} %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
