<div class="container">
  <div class="text-center">
    <h1>ArCdoc</h1>
    <hr>
    <h2>SignUp</h2>
  </div>
  <div class="center-block">
    <div class="col-sm-4 col-sm-offset-4">
      <%= form_tag user_index_path do %>
      <div class="form-group">
        <p>ログインID<p>
        <%= text_field_tag :login_id, params[:login_id], :class => 'form-control'%>
      </div>
      <div class="form-group">
        <p>表示名<p>
        <%= text_field_tag :screen_name, params[:screen_name], :class => 'form-control'%>
      </div>
      <div class="form-group">
        <p>パスワード<p>
        <%= password_field_tag :password, params[:password], :class => 'form-control'%>
      </div >
      <div class="form-group">
        <p>パスワード確認<p>
        <%= password_field_tag :password_confirmation, params[:password_confirmation], :class => 'form-control'%>
      </div >

      <div class="form-group">
        <%= submit_tag 'ユーザ作成', :class => 'btn btn-success btn-block' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
  
